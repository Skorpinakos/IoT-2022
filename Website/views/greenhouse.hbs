                        </thead>
                        <tbody>
                          {{#each rows_plants}}
                              <tr> 
                                  <th scope="row">{{@index}}</th>
                                  {{#each this}}
                                  <td><a href="/plant?ID={{ID}}">{{ID}}</a></td>
