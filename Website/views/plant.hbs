<div class="container-fluid">   

    <div class="row my-5" >
        <div class = "col-2"></div>
        <div class="col-8"> 
            {{#with plant_info}}
            <div class="row recent rounded mb-3">
                <div class="row rounded mb-3">
                    <h4 class='text-center   mt-1 mb-3'>Plant Info</h4>
                </div>
                <div class="row text-center">  
                    <div class="col-4"> 
                    <p class='plant_id'>ID : {{ID}}</p>
                    <p class='greenhouse_id'>Greenhouse : {{GREENHOUSE_ID}}</p>
                    </div>
                    <div class="col-4"> 
                    <p class='type'>Type : {{TYPE}}</p>
                    <p class='lifespan'>Lifespan : {{LIFESPAN}}</p>
                    </div>
                    <div class="col-4"> 
                    <p class='x'>Row : {{ROW}}</p>
                    <p class='y'>Column : {{COLUMN}}</p>
                    </div>
              </div>
                              <div class="row">
                    <div class = "col-1"></div>
                    <div class = "col-10">
            {{/with}}
            <table class="table table-bordered">
                        <thead>
                          <tr>
                             <th scope="col"></th>
                            {{#each rows_plants.[0]}}
                              <th scope="col">{{@index}}</th>
                            {{/each}}
                          </tr>
                        </thead>
                        <tbody>
                          {{#each rows_plants}}
                              <tr> 
                                  <th scope="row">{{@index}}</th>
                                  {{#each this}}
                                    {{#if current_plant}}
                                      <td class="table-info">{{ID}}</td>
                                    {{else}}
                                      <td>{{ID}}</td>
                                    {{/if}}
                                  {{/each}}
                              </tr>
                          {{/each}}
                        </tbody>
                      </table>
                    </div>
                    <div class = "col-1"></div>
                </div>
            </div>
        </div>        
    </div>

  {{#with measurement_info}}
    <div class="row my-5" >
        <div class = "col-2"></div>
        <div class="col-8"> 
            <div class="row recent rounded mb-3">
                <dir class="row">
                    <h4 class='text-center my-2'>Last Measurement</h4>
                </dir>
                <div class="row mt-1 mb-3">
                    <div class="col-4 text-end">
                        <p class='greenhouse_id'>ID : {{ID}}</p>
                        <p class='health'>Health : {{HEALTH}}</p>
                    </div>
                    <div class="col-4 text-center"> 
                        <p class='measurement_date'>Date : {{MEASUREMENT_DATE}}</p>
                        <p class='measurement_time'>Time : {{MEASUREMENT_TIME}}</p>
                    </div>
                    <div class="col-4 text-start"> 
                        <p class='size'>Size : {{SIZE}}</p>
                        <p class='growth'>Growth : {{GROWTH}}</p>
                    </div>
                    

                </div>
                <div class="row">
                    <div class="col-2"></div>
                    <div class="col-8"> 
                        <img class='plant_measurement_image rounded' src={{MEASUREMENT_PHOTO}}>
                    </div>
                    <div class="col-2"></div>
                </div>
            </div>
            {{/with}}
        </div>
    </div>
</div>